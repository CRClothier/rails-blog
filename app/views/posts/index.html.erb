<div class="user-item">
  <img src=<%= @user.photo %> alt="profile-image">
  <div class="user-info">
    <h2><%= @user.name%></h2>
    <p>Number of Posts: <%= @user.posts_counter || 0 %></p>
  </div>
</div>

<% @posts.each do |post| %>
<div class="post-item">
  <h3><%= post.title %></h3>
  <div class="post-info">
    <p><%= post.text%></p>
    <p>Comments: <%= post.comments_counter || 0 %></p>
    <p>Likes: <%= post.likes_counter || 0 %></p>
  </div>
</div>
<div class="comments">
<% comments = Comment.where(post_id: post.id)) %>
<% comments.each do |comment| %>
<p><%=User.find(comment.user_id).name %>: <% comment.text %> </p>
<% end %>
</div>
<% end %>